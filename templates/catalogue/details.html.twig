{% extends "base.html.twig" %}

{% block body %}

	<h1 class="text-center">{{ page_title }}</h1>

	<a href="{{ path('index') }}">&#60;&#60;Back to Pizza list</a>


	<div class="card-content-wrapper">
		<div class="card details-content" style="width: 40rem;">

			<div class="card-body">
				<div class="container text-center">
					<div class="row">
						<div class="col">
							<h2>Ingridients</h2>

						</div>
						<div class="col">
							<button type="button" class="btn btn-success">Add ingridient</button>

						</div>

					</div>
				</div>

				<table class="table">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Price</th>
							<th scope="col">Action</th>
						</tr>
					</thead>
					<tbody>
						{% for ingridient in ingridient_list %}

							<tr>
								<th scope="row">{{ ingridient.id }}</th>

								<td>{{ ingridient.name }}</td>

								<td>{{ ingridient.price }}â‚¬</td>

								<td>
									<button type="button" class="btn btn-success">Edit</button>
									<button type="button" class="btn btn-danger">Remove</button>
								</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>

			</div>
		</div>
	</div>
{% endblock %}
